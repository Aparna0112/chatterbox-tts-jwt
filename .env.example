# Environment variables for Chatterbox TTS API

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Server Configuration
PORT=8000
DEBUG=false

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional: External TTS Service (if you want to proxy to RunPod)
# EXTERNAL_TTS_ENDPOINT=https://your-runpod-endpoint.com
# EXTERNAL_TTS_API_KEY=your-runpod-api-key
